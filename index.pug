- var title = "CARLOSRM | Fotografia"
- var description = "-"
- var author = "Kuroi Kyu"
- var image = "http://carlos.kuroikyu.com/landing.jpg"
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    meta(name="theme-color" content="#111111")


    title CARLOSRM | Fotografia
    meta(name="description" content="")
    meta(name="author" content="Kuroi Kyu")
    // meta(name="keywords" content="Projects, Portfolio, Kuroi, Kyu, HTML, CSS, JavaScript")

    // Responsive meta tag
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    // icons
    link(rel="apple-touch-icon", sizes="180x180", href="/apple-touch-icon.png")
    link(rel="icon", type="image/png", href="/favicon-32x32.png", sizes="32x32")
    link(rel="icon", type="image/png", href="/favicon-16x16.png", sizes="16x16")
    link(rel="manifest", href="/manifest.json")
    link(rel="mask-icon", href="/safari-pinned-tab.svg", color="#111111")

    // Facebook's share tags
    //- meta(property="fb:app_id" content="")
    meta(property="og:url" content="http://carlos.kuroikyu.com/")
    meta(property="og:title" content=title)
    meta(property="og:type" content="website")
    meta(property="og:description" content=description)
    meta(property="og:image" content=image)
    meta(property="og:site_name" content="Wendigo Tattoo")

    // Twitter share tags
    meta(name="twitter:card" content="summary_large_image")
    meta(name="twitter:content" content="@carlosrmfotografia")
    meta(name="twitter:creator" content="@kuroikyu")
    meta(name="twitter:title" content=title)
    meta(name="twitter:description" content=description)
    meta(name="twitter:image" content=image)

    // Normalize HTML5 Reset
    link(rel="stylesheet" href="node_modules/normalize.css/normalize.css")
    // Font Awesome
    link(rel="stylesheet" href="node_modules/font-awesome/css/font-awesome.css")
    // Dosis font from Google Fonts
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Dosis:200,300,400")

    // styles.css link
    link(rel="stylesheet" href="assets/css/styles.css")

  body
    .image
    .container
      h1
        span.primary CARLOSRM
        span.secondary FOTOGRAFIA

      main
        ul.social
          li: a.link(href="http://instagram.com/_u/carlosrmfotografia/", target="_blank" rel="noopener")
            i.fa.fa-instagram
            span instagram
          li: a.link(href="https://500px.com/carlosrmfotografia", target="_blank" rel="noopener")
            i.fa.fa-500px
            span 500px
          li: a.link(href="https://www.facebook.com/carlosrmfotografia/", target="_blank" rel="noopener")
            i.fa.fa-facebook
            span facebook
      .button
        a.link(href="mailto:contact@carlosrmfotografia.com", target="_top") contact@carlosrmfotografia.com

    footer
      span.copy &copy; 2017
        a.link(href="http://kuroikyu.com", target="_blank" rel="noopener")  KUROI KYU

